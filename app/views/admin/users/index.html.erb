<table class='table'>
  <thead>
    <th></th>
    <th>ユーザー名</th>
    <th>投稿件数</th>
    <th>フォロワー数</th>
    <th>フォロー数</th>
    <th>ステータス</th>
    <th>ユーザー登録日時</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr id="user_<%= user.id %>">
        <td>
          <%= link_to admin_user_path(user) do %>
            <%= image_tag user.profile_image_url, format: "jpg", size: "32x32", class: "rounded-circle" %>
          <% end %>
        </td>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.posts.count %>件</td>
        <td><%= "#{user.followers.count}人" %></td>
        <td><%= "#{user.followings.count}人" %></td>
        <td>
        	<% if user.is_valid? %>
						<span class="text-success">有効</span>
					<% else %>
						<span class="text-muted">退会済み</span>
					<% end %>
        </td>
        <td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>