<% visitor = notification.visitor %>
<% visited = notification.visited %>
  <div>
    <span>
      <%= link_to user_path(visitor) do %>
        <%= attachment_image_tag(visitor, :profile_image, size: "32x32", fallback: "no-image-icon.jpg", size: "32x32", class: "icon_mini rounded-circle border") %>
        <strong><%= visitor.name %></strong>
      <% end %>
      さんが
      <% case notification.action %>
        <% when 'follow' then %>
          あなたをフォローしました
        <% when 'like' then %>
          <%= link_to "あなたの投稿", post_path(notification.post), class: "font-weight-bold" %>
          にいいねしました
        <% when 'comment' then %>
          <% if notification.post.user_id == visited.id %>
            <%= link_to "あなたの投稿", post_path(notification.post), class: "font-weight-bold" %>
          <% else %>
            <span>
              <%= link_to post_path(notification.post) do %>
                <%= attachment_image_tag(notification.post.user, profile_image, class: "icon_mini") %>
                <strong><%= notification.post.user.name + "さんの投稿" %></strong>
              <% end %>
            </span>
          <% end %>
          にコメントしました
          <p class="text-muted mb-0">
            <%= Comment.find_by(id: notification.comment_id)&.comment %>
          </p>
      <% end %>
    </span>

    <div class="small text-muted text-right">
      <%= time_ago_in_words(notification.created_at) %>前
    </div>

  </div>
  <hr>
