<div class='home'>
  <div class='home__box'>

    <div class='home__main mx-auto text-center'>
      <div class='home__main-contents mx-auto my-3 p-5 bg-white rounded shadow'>
        <h3 class='py-4 font__purple'>新規登録</h3>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <div class='form-group'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'form-control shadow rounded-pill' %>
          </div>
          <div class='form-group'>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'お名前', class: 'form-control shadow rounded-pill' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'パスワード（6文字以上）', class: 'form-control shadow rounded-pill' %>
          </div>
          <div class='form-group'>
            <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", placeholder: 'パスワード確認', class: 'form-control shadow rounded-pill' %>
          </div>

          <div class="actions my-4">
            <%= f.submit "新規登録", class: 'btn__lg btn__purple' %>
          </div>
        <% end %>

        <%= render "public/shared/links" %>
      </div>
    </div>

  </div>
</div>