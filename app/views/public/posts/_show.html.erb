<div class="modal-dialog modal-dialog-centered modal-dialog-fluid mx-auto">
  <div class="modal-content">
    <div class="modal-body p-0">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

      <div class="d-flex">
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
          <ol class="carousel-indicators">
            <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselIndicators" data-slide-to="1"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= attachment_image_tag(post, :before_image) %>
            </div>
            <div class="carousel-item">
              <%= attachment_image_tag(post, :after_image) %>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div>
          <div class="post-header p-2">
            <%= link_to user_path(post.user) do %>
              <%= attachment_image_tag post.user, :profile_image, format: "jpg", size: "32x32", fallback: "no-image-icon.jpg", size: "32x32", class: "rounded-circle" %>
              <span class="font-weight-bold ml-2"><%= post.user.name %></span>
            <% end %>
            <span class="small text-muted"> - <%= time_ago_in_words(post.created_at) %>前</span>
            <% if post.user == current_user %>
              <%= link_to "", edit_post_path(post), class: "far fa-edit" %>
            <% end %> </br>
            <%= render_with_hashtags(post.caption) %>
          </div>

          <div id="post_<%= post.id %>" class="post-footer">
            <span class="like-btn">
              <%= render "public/likes/like-btn", post: post %>
            </span>

            <i class="far fa-comment comments-count"><%= post.comments.count %>コメント</i>

            <span class="favorite-btn">
              <%= render "public/favorites/favorite-btn", post: post %>
            </span> </br>

            <span class="comments">
              <%= render partial: "public/comments/index", collection: post.comments, as: "comment" %>
            </span>

            <%= form_with model:[post, Comment.new] do |f| %>
              <%= f.text_area :comment, size: "38x2", placeholder: "コメントを追加" %>
              <%= f.submit "投稿" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
