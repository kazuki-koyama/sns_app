<div class="search-form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword %>
    <%= f.submit '検索' %>
  <% end %>
</div>

<div class="posts">
  <% @posts.each do |post| %>
    <%= render "post-item", { post: post, comment: @comment } %>
  <% end %>
</div>