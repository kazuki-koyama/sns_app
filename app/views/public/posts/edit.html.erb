<% provide(:title, "投稿を編集") %>
<%= link_to "←", 'javascript:history.back()' %>
<h5>Editing Post</h5>
<%= form_with model: @post do |f| %>
  <div class="form-group">
    <%= f.label :before_image %>
    <%= f.attachment_field :before_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :after_image %>
    <%= f.attachment_field :after_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

<% if @post.user == current_user %>
  <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "destroy_post_#{@post.id}" %>
<% end %>
