<div class='left-side h-100'>
  <div class='left-side__sticky'>

    <nav class='pb-3'>
      <ul>
        <% if user_signed_in? %>
          <li>
            <%= link_to home_path, class: "left-side__link" do %>
              <div class='left-side__icon-outer'>
                <i class="fas fa-home left-side__icon"></i>
              </div>
              <div class='left-side__text'>ホーム</div>
            <% end %>
          </li>
          <li>
            <%= link_to posts_path, class: "left-side__link" do %>
              <div class='left-side__icon-outer'>
                <i class="fas fa-search left-side__icon"></i>
              </div>
              <div class='left-side__text'>検索</div>
            <% end %>
          </li>
          <li>
            <%= link_to notifications_path, class: "left-side__link" do %>
              <div class='left-side__icon-outer'>
                <% if unchecked_notifications.any? %>
                  <span class="position-relative">
                    <i class="far fa-bell left-side__icon"></i>
                    <i class="fas fa-circle left-side__icon-circle position-absolute"></i>
                  </span>
                <% else %>
                  <i class="far fa-bell fa-lg"></i>
                <% end %>
              </div>
              <div class='left-side__text'>通知</div>
            <% end %>
          </li>
          <li>
            <%= link_to favorites_user_path(user), class: "left-side__link" do %>
              <div class='left-side__icon-outer'>
                <i class="far fa-bookmark left-side__icon"></i>
              </div>
              <div class='left-side__text'>ブックマーク</div>
            <% end %>
          </li>
          <li>
            <%= link_to user_path(user), class: "left-side__link" do %>
              <div class='left-side__icon-outer'>
                <%= attachment_image_tag(user, :profile_image, format: "jpg", size: "35x35", fallback: "no-image-icon.jpg", size: "35x35", class: "rounded-circle border") %>
              </div>
              <div class='left-side__text'>マイページ</div>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete, class: 'left-side__link' do %>
              <div class='left-side__icon-outer'>
                <i class='fas fa-sign-out-alt left-side__icon'></i>
              </div>
              <div class='left-side__text'>ログアウト</div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>

    <div class='left-side__post-box'>
      <%= link_to 'New Post', new_post_path, remote: true, class: 'left-side__post-btn btn__purple' %>
      <%= link_to '', new_post_path, remote: true, class: 'far fa-plus-square left-side__post-icon' %>
      <!-- 新規投稿作成モーダルウィンドウの表示領域 -->
      <div id="new-post" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
    </div>

    <footer class='left-side__footer text-center'>
      <p class='left-side__footer-text text-muted'>Copyright © 2021 Change All Rights Reserved.</p>
    </footer>

  </div>
</div>