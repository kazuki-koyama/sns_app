<% if post.liked_by?(current_user) %>
  <%= link_to '', post_likes_path(post), method: :delete, remote: true, class: "fas fa-heart fa-lg heart_red" %>
  <%= post.likes.count %>
<% else %>
  <%= link_to '', post_likes_path(post), method: :post, remote: true, class: "far fa-heart fa-lg" %>
  <%= post.likes.count %>
<% end %>