<h5>プロフィールを編集</h5>

<%= form_with model: @user, local: true do |f| %>
  <div class="field">
    <%= f.label :プロフィール写真 %><br />
    <%= f.attachment_field :profile_image, autofocus: true, autocomplete: "profile_image" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :アカウント名 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :自己紹介 %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "退会", confirm_unsubscribe_path, class: "btn btn-danger" %>