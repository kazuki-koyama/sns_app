<%= form_with model:post, local:true do |f| %>
  <div class="form-group">
    <%= f.label :before_image %>
    <%= f.attachment_field :before_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :after_image %>
    <%= f.attachment_field :after_image, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :caption %>
    <%= f.text_area :caption, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
